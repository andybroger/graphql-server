{
  "name": "backend",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "NODE_DEV=true ts-node-dev -r tsconfig-paths/register src/index.ts",
    "lint": "eslint src/**/*.ts --fix",
    "gen-env-types": "gen-env-types .env -o src/utils/types/env.d.ts -e .",
    "start": "yarn build && NODE_PATH=./dist node dist/index.js",
    "migration:create": "mikro-orm migration:create",
    "migration:up": "mikro-orm migration:up"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./dist/orm.config.js"
    ]
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.7",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "gen-env-types": "^1.0.3",
    "prettier": "^2.0.5",
    "ts-node-dev": "^1.0.0-pre.57",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@mikro-orm/cli": "^4.0.0-rc.1",
    "@mikro-orm/core": "^4.0.0-rc.1",
    "@mikro-orm/migrations": "^4.0.0-rc.1",
    "@mikro-orm/postgresql": "^4.0.0-rc.1",
    "argon2": "^0.26.2",
    "body-parser": "^1.19.0",
    "class-validator": "^0.12.2",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-graphql": "^0.11.0",
    "graphql": "^15.3.0",
    "graphql-fields-to-relations": "^1.0.4",
    "graphql-playground-middleware-express": "^1.7.18",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^8.10.2",
    "type-graphql": "^1.0.0-rc.3",
    "uuid": "^8.3.0"
  }
}
